# Graph RAG Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=Graph RAG
DEBUG=false
HOST=0.0.0.0
PORT=8008

# NebulaGraph Settings
NEBULA__HOSTS=["127.0.0.1:9669"]
NEBULA__USERNAME=root
NEBULA__PASSWORD=your-nebula-password
NEBULA__SPACE=graph_rag
NEBULA__MAX_CONNECTION_POOL_SIZE=10

# Vector Store Settings
VECTOR_STORE__TYPE=qdrant
VECTOR_STORE__QDRANT_HOST=localhost
VECTOR_STORE__QDRANT_PORT=6333
VECTOR_STORE__QDRANT_COLLECTION=graph_rag
VECTOR_STORE__DIMENSION=1536
# VECTOR_STORE__QDRANT_API_KEY=your-api-key

# Embedding Settings
EMBEDDING__TYPE=openai
EMBEDDING__OPENAI_MODEL=text-embedding-ada-002
EMBEDDING__OPENAI_API_KEY=your-openai-api-key
EMBEDDING__OPENAI_API_BASE=https://api.openai.com/v1

# LLM Settings
LLM__TYPE=openai
LLM__OPENAI_MODEL=gpt-4o-mini
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=2048
LLM__OPENAI_API_KEY=your-openai-api-key
LLM__OPENAI_API_BASE=https://api.openai.com/v1

# Ollama Settings (if using Ollama)
# LLM__TYPE=ollama
# LLM__OLLAMA_HOST=http://localhost:11434
# LLM__OLLAMA_MODEL=llama3.2

# Azure OpenAI Settings (if using Azure)
# EMBEDDING__TYPE=azure
# EMBEDDING__AZURE_ENDPOINT=https://your-resource.openai.azure.com
# EMBEDDING__AZURE_API_KEY=your-azure-api-key
# EMBEDDING__AZURE_DEPLOYMENT=text-embedding-ada-002
# EMBEDDING__AZURE_API_VERSION=2024-02-01
